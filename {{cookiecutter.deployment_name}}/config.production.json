{
    "url": "https://{{cookiecutter.domain}}",
    "server": {
      "port": 2368,
      "host": "0.0.0.0"
    },
    "database": {
      "client": "sqlite3",
      "connection": {
        "filename": "/var/lib/ghost/content/data/ghost.db"
      }
    },
    "mail": {
      "transport": "SMTP",
      "options": {
        "service": "Mailgun",
        "auth": {
          "user": "email@domain.com",
          "pass": "YourLongAndSecretPasswrod"
        }
      }
    },
    "logging": {
      "transports": [
        "stdout"
      ]
    },
    "paths": {
      "contentPath": "/var/lib/ghost/content"
    }
  }
  